{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js",
            "runtimeExecutable": "${workspaceRoot}/node_modules/@babel/node/bin/babel-node.js",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/.env.debug.sample"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 8990
        }
    ]
}